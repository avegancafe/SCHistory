{
  "manifest_version": 2,

  "name": "SoundCloud History",
  "description": "This extension allows you to view previously played songs on soundcloud.com.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon-small.png",
    "default_popup": "app/assets/popup.html"
  },
  "content_scripts": [{
    "js": ["app/assets/javascripts/content.js"],
    "matches": ["*://soundcloud.com/*"]
  }],
  "permissions": [
      "storage",
      "*://soundcloud.com/*"
  ]
}
